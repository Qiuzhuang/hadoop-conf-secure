<?xml version="1.0"?>
<configuration>
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>
  <property>
    <name>yarn.nodemanager.delete.debug-delay-sec</name>
    <value>600</value>
  </property>
  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce.shuffle</value>
  </property>

  <property>
    <name>yarn.application.classpath</name>
    <value>/home/ec2-user/hadoop-runtime/etc/hadoop:/home/ec2-user/hadoop-runtime/share/hadoop/common/*:/home/ec2-user/hadoop-runtime/share/hadoop/common/lib/*:/home/ec2-user/hadoop-runtime/share/hadoop/hdfs/*:/home/ec2-user/hadoop-runtime/share/hadoop/hdfs/lib/*:/home/ec2-user/hadoop-runtime/share/hadoop/mapreduce/*:/home/ec2-user/hadoop-runtime/share/hadoop/mapreduce/lib/*:/home/ec2-user/giraph/target/classes</value>
  </property>

  <property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value>HOST_GOES_HERE:8030</value>
  </property>
  <property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value>HOST_GOES_HERE:8031</value>
  </property>
  <property>
    <name>yarn.resourcemanager.address</name>
    <value>HOST_GOES_HERE:8032</value>
  </property>
  <property>
    <name>yarn.resourcemanager.admin.address</name>
    <value>HOST_GOES_HERE:8033</value>
  </property>
  <property>
    <name>yarn.resourcemanager.webapp.address</name>
    <value>HOST_GOES_HERE:8088</value>
  </property>

  <property>
    <name>yarn.nodemanager.admin-env</name>
    <!-- JAVA_LIBRARY_PATH is set in yarn-env.sh (above) -->
    <value>MALLOC_ARENA_MAX=$MALLOC_ARENA_MAX, JAVA_LIBRARY_PATH=$JAVA_LIBRARY_PATH, LD_LIBRARY_PATH=$JAVA_LIBRARY_PATH, FOO=42</value>
  </property>

  <property>
    <name>yarn.resourcemanager.keytab</name>
    <value>/home/ec2-user/hadoop-conf/services.keytab</value>
  </property>

  <property>
    <name>yarn.resourcemanager.principal</name>
    <value>yarn/_HOST@HADOOP.LOCALDOMAIN</value>
  </property>

  <property>
    <name>yarn.nodemanager.keytab</name>
    <value>/home/ec2-user/hadoop-conf/services.keytab</value>
  </property>

  <property>
    <name>yarn.nodemanager.principal</name>
    <value>yarn/_HOST@HADOOP.LOCALDOMAIN</value>
  </property>

  <property>
    <name>mapreduce.map.log.level</name>
    <value>DEBUG</value>
  </property>
  <property>
    <name>yarn.app.mapreduce.am.log.level</name>
    <value>DEBUG</value>
  </property>


  <property>
    <name>yarn.app.mapreduce.am.command-opts</name>
    <value> -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5011 -Dhadoop.root.logger=INFO,CLA -Dzookeeper.root.logger=INFO,CLA </value>
  </property>

  <!-- only enable for particular debugging scenarios where you've started a debuguer in server mode for the
       map.child to connect to (since it's server=n). -->
<!--
  <property>
    <name>mapreduce.admin.map.child.java.opts</name>
    <value> -Xdebug -Xrunjdwp:transport=dt_socket,server=n,suspend=n,address=5012 </value>
  </property>
-->

</configuration>
